    <Grid Width="800">
        <Grid 
                Background="#FF33AE"
                Height="90" Width="800"
                HorizontalAlignment="Center"
                VerticalAlignment="Top">
        </Grid>
        <Border
                Background="White"
                CornerRadius="7"
                Height="80" Width="500"
                Margin="0 50 0 0"
                HorizontalAlignment="Center"
                VerticalAlignment="Top">
            <Border.BitmapEffect>
                <DropShadowBitmapEffect Color="Gray" Direction="320" Softness="1" ShadowDepth="6" Opacity="0.8" />
            </Border.BitmapEffect>
            <StackPanel>
                <Label Height="30" FontSize="18" Margin="15 0">New Todo:</Label>
                <Grid Height="50">
                    <Grid 
                        Width="480"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center">
                        <TextBox
                            x:Name="txtTaskTodo"
                                Width="360" Height="35"
                                Margin="20 0 0 0"
                                FontSize="20" Foreground="Black"
                                BorderBrush="#EDEDED"
                                HorizontalAlignment="Left"
                                VerticalAlignment="Center"
                            VerticalContentAlignment="Center"/>
                        <Button
                            x:Name="btnAddNew"
                                Content="Add"
                            FontSize="20"
                            FontWeight="Bold"
                                Foreground="White"
                                Margin="0 0 20 0"
                                HorizontalAlignment="Right"
                                VerticalAlignment="Center"
                            Click="btnAddNew_Click">
                            <Button.Style>
                                <Style TargetType="Button">
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="Button">
                                                <Border
                                                        x:Name="borderMenuItem"
                                                        BorderBrush="Transparent"
                                                        Width="65" Height="34"
                                                        Background="#FF33AE"
                                                        CornerRadius="2">
                                                    <ContentPresenter
                                                            HorizontalAlignment="Center"
                                                            VerticalAlignment="Center"/>
                                                </Border>
                                                <ControlTemplate.Triggers>
                                                    <Trigger Property="IsMouseOver" Value="True">
                                                        <Setter TargetName="borderMenuItem" Property="Background" Value="#4C000000"/>
                                                    </Trigger>
                                                </ControlTemplate.Triggers>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                </Style>
                            </Button.Style>
                        </Button>
                    </Grid>
                </Grid>
            </StackPanel>
        </Border>
        <Border
            Height="350" Width="510"
            BorderBrush="#e7e7e7"
            BorderThickness="1"
            Margin="0 0 0 40"
            VerticalAlignment="Bottom"
            HorizontalAlignment="Center">
            <StackPanel>
                <Border
                    BorderBrush="#e7e7e7"
                    BorderThickness="1"
                    Height="50"
                    VerticalAlignment="Top">
                    <Grid>
                        <Label 
                            Content="Edit" 
                            FontSize="16" Foreground="#464646"
                            Margin="10 0 0 0" 
                            HorizontalAlignment="Left"
                            VerticalAlignment="Center"></Label>
                        <TextBox
                            x:Name="txtTastEdit"
                            Width="390" Height="30" 
                            FontSize="16"
                            BorderBrush="#e7e7e7"
                            Margin="0 0 20 0"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            VerticalContentAlignment="Center"/>
                        <Button
                            x:Name="btnSave"
                            Content="Save" FontSize="16"
                            Margin="0 0 10 0"
                            HorizontalAlignment="Right"
                            VerticalAlignment="Center"
                            Click="btnSave_Click">
                            <Button.Style>
                                <Style TargetType="Button">
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="Button">
                                                <Border
                                                    x:Name="borderMenuItem"
                                                    Width="50" Height="30"
                                                    BorderBrush="#FF33AE"
                                                    BorderThickness="1.5"
                                                    CornerRadius="2">
                                                    <ContentPresenter
                                                        HorizontalAlignment="Center"
                                                        VerticalAlignment="Center"/>
                                                </Border>
                                                <ControlTemplate.Triggers>
                                                    <Trigger Property="IsMouseOver" Value="True">
                                                        <Setter TargetName="borderMenuItem" Property="Background" Value="wheat"/>
                                                    </Trigger>
                                                </ControlTemplate.Triggers>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                </Style>
                            </Button.Style>
                        </Button>
                    </Grid>
                </Border>
                <ScrollViewer 
                    Name="ScrollViewer1"
                    VerticalScrollBarVisibility="Auto" 
                    HorizontalScrollBarVisibility="Auto" CanContentScroll="True">
                    <StackPanel 
                    x:Name="stpTodoList"
                    Height="300" Width="470"
                    VerticalAlignment="Bottom"
                    HorizontalAlignment="Center"
                    CanVerticallyScroll="True"
                    CanHorizontallyScroll="False">
                        <StackPanel.Resources>
                            <Style TargetType="TextBlock">
                                <Setter Property="FontSize" Value="17"/>
                                <Setter Property="FontWeight" Value="Bold"/>
                                <Setter Property="VerticalAlignment" Value="Center"/>
                            </Style>
                            <Style TargetType="CheckBox">
                                <Setter Property="VerticalAlignment" Value="Center"/>
                            </Style>
                            <Style TargetType="Button">
                                <Setter Property="Background" Value="Transparent"/>
                            </Style>
                        </StackPanel.Resources>
                    </StackPanel>
                </ScrollViewer>
            </StackPanel>
        </Border>
        
    </Grid>
</Window>
